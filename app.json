{
  "expo": {
    "name": "CivicKey",
    "slug": "civickey",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D5C63"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "ca.civickey.app",
      "buildNumber": "5",
      "infoPlist": {
        "NSCameraUsageDescription": "CivicKey needs camera access to scan QR codes.",
        "NSPhotoLibraryUsageDescription": "CivicKey needs photo library access to upload images.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "ca.civickey.app",
      "versionCode": 6,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D5C63"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "7d8c5bf9-25cc-45e0-a64b-f06afedfacd5"
      }
    }
  }
}
