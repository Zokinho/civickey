rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user is a super-admin (via custom claim)
    function isSuperAdmin() {
      return isAuthenticated()
        && request.auth.token.role == 'super-admin';
    }

    // Helper: Check if user is assigned to a municipality with write role
    function canWriteMunicipality(municipalityId) {
      return isAuthenticated()
        && request.auth.token.municipalityId == municipalityId
        && request.auth.token.role in ['editor', 'admin'];
    }

    // ============================================
    // MUNICIPALITY FILES
    // ============================================

    match /municipalities/{municipalityId}/{allPaths=**} {
      // Public read for logos and images (needed for app)
      allow read: if true;

      // Write requires matching municipality assignment or super-admin role.
      // Custom claims (role, municipalityId) must be set on admin accounts
      // via Firebase Admin SDK or the auth_update_user MCP tool.
      allow write: if isSuperAdmin() || canWriteMunicipality(municipalityId);
    }

    // ============================================
    // CATCH-ALL: DENY EVERYTHING ELSE
    // ============================================

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
